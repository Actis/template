# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
#end_of_line = crlf

# Web
[*.{yml,css,js,json,html}]
indent_size = 2
indent_style = space

# XML
[*.{xml,xsl,xslt,xsd}]
indent_size = 2
indent_style = space
insert_final_newline = false

# Xml config files
[*.config]
charset = utf-8-bom
indent_size = 2
indent_style = space
insert_final_newline = false
